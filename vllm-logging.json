{
  "version": 1,

  "formatters": {
    "default": {
      "format": "%(asctime)s %(levelname)s %(name)s %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },

  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "default",
      "stream": "ext://sys.stdout"
    },

    "vllm_file": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "default",
      "filename": "/logs/vllm-server.log",
      "when": "midnight",
      "interval": 1,
      "backupCount": 7,
      "encoding": "utf8",
      "utc": false
    }
  },

  "loggers": {
    "vllm": {
      "handlers": ["console", "vllm_file"],
      "level": "INFO",
      "propagate": false
    }
  }
}
